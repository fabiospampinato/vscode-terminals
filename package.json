{
  "name": "vscode-terminals",
  "displayName": "Terminals Manager",
  "publisher": "fabiospampinato",
  "repository": "github:fabiospampinato/vscode-terminals",
  "description": "An extension for setting-up multiple terminals at once, or just running some commands",
  "icon": "resources/logo-128x128.png",
  "version": "1.15.0",
  "main": "dist/index.js",
  "activationEvents": [
    "onStartupFinished"
  ],
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "Terminals Manager - Configuration",
      "properties": {
        "terminals.autorun": {
          "type": "boolean",
          "description": "Execute terminals automatically at startup or when the project is added to the workspace"
        },
        "terminals.autokill": {
          "type": "boolean",
          "description": "Kill all the terminals created from this configuration when the project is removed from the workspace"
        },
        "terminals.env": {
          "type": "object",
          "description": " Object containing custom environment variables",
          "additionalProperties": {
            "type": [
              "string",
              "null"
            ]
          }
        },
        "terminals.multiplexer": {
          "type": "string",
          "description": "The terminal multiplexer that persistent terminals will use",
          "enum": [
            "screen",
            "tmux"
          ]
        },
        "terminals.terminals": {
          "type": "array",
          "description": "Array of terminals to open"
        }
      }
    },
    "commands": [
      {
        "command": "terminals.editConfig",
        "title": "Terminals: Edit Configuration"
      },
      {
        "command": "terminals.kill",
        "title": "Terminals: Kill"
      },
      {
        "command": "terminals.runTerminals",
        "title": "Terminals: Run"
      },
      {
        "command": "terminals.runTerminal",
        "title": "Terminals: Run Single"
      },
      {
        "command": "terminals.runTerminalByName",
        "title": "Terminals: Run Terminal By Name"
      }
    ],
    "keybindings": [
      {
        "command": "terminals.runTerminal",
        "key": "ctrl+alt+t",
        "mac": "cmd+alt+t"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "terminals.runTerminalByName",
          "when": "false"
        }
      ]
    }
  },
  "scripts": {
    "bundle:dev": "tsex bundle --external vscode --format cjs --platform node --no-declare",
    "bundle:prod": "tsex bundle --external vscode --format cjs --platform node --minify",
    "clean": "tsex clean",
    "compile": "tsex compile",
    "debug": "code --extensionDevelopmentPath $PWD --inspect-extensions 9222",
    "package": "vsce package",
    "prepublishOnly": "scex -bs clean bundle:prod",
    "vscode:prepublish": "scex -bs clean bundle:prod",
    "dev": "scex -bs bundle:dev debug",
    "prod": "scex -bs bundle:prod debug"
  },
  "categories": [
    "Other"
  ],
  "engines": {
    "vscode": "^1.87.0"
  },
  "keywords": [
    "vscode",
    "vsc",
    "extension",
    "terminals",
    "manager"
  ],
  "dependencies": {
    "tiny-jsonc": "^1.0.2",
    "vscode-extras": "^1.9.0"
  },
  "devDependencies": {
    "@types/node": "^18.19.130",
    "@types/vscode": "^1.87.0",
    "esbuild": "0.25.12",
    "scex": "^1.1.0",
    "tsex": "^4.0.2",
    "typescript": "^5.9.3"
  }
}
